<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MinecraftLauncherUniversal.Dialogs.WelcomeSetupDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MinecraftLauncherUniversal.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Pivot Title="Setup" TabFocusNavigation="Once" IsHeaderItemsCarouselEnabled="False">
            <PivotItem Header="Welcome" IsEnabled="False">
                <StackPanel Spacing="2" Padding="20">
                    <TextBlock Text="Welcome" Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock Text="This will help you set up the launcher" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="Username">
                
            </PivotItem>
            <PivotItem Header="Demo">

            </PivotItem>
            <PivotItem Header="Done">

            </PivotItem>
        </Pivot>
    </Grid>
</Page>
