<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MinecraftLauncherUniversal.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MinecraftLauncherUniversal.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    mc:Ignorable="d" Unloaded="Page_Unloaded"
    Background="Transparent">

    <Grid Margin="58, 42, 58,0" RowSpacing="3" x:Name="RGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Personalization" FontSize="12" Grid.Row="0" Margin="0,2,0,4" FontWeight="SemiBold"/>
        <labs:SettingsCard x:Name="ThemeCard" Header="Theme" Description="Change app theme (BETA)"
              Grid.Row="1" >
            <labs:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xE790;"/>
            </labs:SettingsCard.HeaderIcon>
            <Grid>
                <StackPanel x:Name="CardContentPanel" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ToggleSwitch OnContent="Dark" OffContent="Light" x:Name="ThemeSwitch"
              Toggled="ToggleSwitch_Toggled" Loaded="ToggleSwitch_Loaded"/>
                </StackPanel>
            </Grid>
        </labs:SettingsCard>
        <labs:SettingsCard x:Name="SoundCard"
              Grid.Row="2"
              Header="Sound"
              Description="Enable sound effects while using the app">
            <labs:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xE8D6;"/>
            </labs:SettingsCard.HeaderIcon>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                <ToggleSwitch x:Name="SoundToggle" OnContent="Play sound effects" OffContent="Don't play sound effects" IsOn="False" Toggled="SoundToggle_Toggled" IsEnabled="True"/>
            </StackPanel>
        </labs:SettingsCard>
        <labs:SettingsCard x:Name="DownloadRateLimitCard"
              Grid.Row="3"
              Loaded="DownloadRateLimitCard_Loaded"
              Header="Download Rate Limit"
              Description="Change how many connections will be used to download Minecraft">
            <labs:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xEBD3;"/>
            </labs:SettingsCard.HeaderIcon>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                <NumberBox SpinButtonPlacementMode="Hidden" x:Name="DownloadConnectionLimitBox" ValueChanged="DownloadConnectionLimitBox_ValueChanged"/>
            </StackPanel>
        </labs:SettingsCard>
        <labs:SettingsCard x:Name="ResetAppCard" Visibility="Visible"
              Grid.Row="5"
              Header="Reset App"
              Description="This will require app restart!">
            <labs:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xED10;"/>
            </labs:SettingsCard.HeaderIcon>
            <Button x:Name="ResetAppBtn" Click="ResetAppBtn_Click" Background="Red" Content="Reset"/>
        </labs:SettingsCard>
        <labs:SettingsCard x:Name="ConsoleCard" Visibility="Visible"
              Grid.Row="4"
              Header="Debug Console"
              Description="Enable or disable a simple debug console">
            <labs:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xED10;"/>
            </labs:SettingsCard.HeaderIcon>
            <ComboBox x:Name="ConsoleVisibilityCombo" SelectionChanged="ConsoleVisibilityCombo_SelectionChanged"> 
                <ComboBoxItem Content="Show" x:Name="ShowConsole"/>
                <ComboBoxItem Content="Hide" x:Name="HideConsole"/>
            </ComboBox>
        </labs:SettingsCard>
        <TextBlock Text="Related Settings" FontSize="12" Grid.Row="8" Margin="0,2,0,4" FontWeight="SemiBold"/>
        <labs:SettingsCard IsClickEnabled="True" Header="Player Settings" Description="Username, SubText, Profiles" Click="HyperlinkButton_Click" Grid.Row="9">
            <labs:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xEF58;"/>
            </labs:SettingsCard.HeaderIcon>
        </labs:SettingsCard>
    </Grid>
</Page>
